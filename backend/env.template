# Database Configuration
# Replace with your PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# 
# Options:
# 1. Local PostgreSQL: postgresql://postgres:password@localhost:5432/unicart?schema=public
# 2. Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres
# 3. Railway: Check your Railway project dashboard
# 4. Vercel Postgres: Check your Vercel project storage
DATABASE_URL="postgresql://postgres:password@localhost:5432/unicart?schema=public"

# JWT Secret Key (REQUIRED)
# Use this generated secret: 42663bd76678ad2bdd54c00b231eb1bbbc12727205d8771e7dfbebe84cbf84a5
# Or generate your own: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="42663bd76678ad2bdd54c00b231eb1bbbc12727205d8771e7dfbebe84cbf84a5"

# JWT Expiration (optional, default is 7d)
JWT_EXPIRES_IN="7d"

# Server Port (optional, default is 5000)
PORT=5000

# Node Environment
NODE_ENV="development"

# Frontend URL (for reference - CORS now allows all origins)
FRONTEND_URL="http://localhost:3000"

